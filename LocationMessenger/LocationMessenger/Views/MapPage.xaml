<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocationMessenger.Views.MapPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:customControls="clr-namespace:LocationMessenger.Views.CustomControls;assembly=LocationMessenger"
             xmlns:local="clr-namespace:LocationMessenger;assembly=LocationMessenger"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}">
  <customControls:MapMessages
            x:Name="MapMsg"
            IsShowingUser="true"
            MapType="Street"
            VerticalOptions="FillAndExpand"
    />
</ContentPage>